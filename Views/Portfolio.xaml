<UserControl x:Class="StockBrokerProject.Views.Portfolio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:StockBrokerProject"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">
    <UserControl.Resources>
        <local:ChangeToColorConverter x:Key="ChangeToColorConverter"/>
        <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="My Portfolio" FontSize="28" FontWeight="Bold" 
                       Foreground="{StaticResource TextPrimary}" Margin="0,0,0,24"/>

            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Portfolio Summary" FontSize="18" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimary}" Margin="0,0,0,16"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="💵" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Total Value" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                            </StackPanel>
                            <TextBlock Text="{Binding TotalValue, StringFormat=\{0:C2\}}" 
                                       FontSize="24" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Total Gain/Loss" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                            </StackPanel>
                            <TextBlock Text="{Binding TotalGainLoss, StringFormat=\{0:C2\}}" 
                                       FontSize="24" FontWeight="Bold"
                                       Foreground="{Binding TotalGainLoss, Converter={StaticResource ChangeToColorConverter}}"/>
                            <TextBlock Margin="0,4,0,0" FontSize="14"
                                       Foreground="{Binding TotalGainLoss, Converter={StaticResource ChangeToColorConverter}}">
                                <Run Text="{Binding TotalGainLossPercent, Mode=OneWay, StringFormat={}{0:+0.00%;-0.00%}}"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="💰" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Cash Balance" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                            </StackPanel>
                            <TextBlock Text="{Binding CashBalance, StringFormat=\{0:C2\}}" 
                                       FontSize="24" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="📈" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Invested Amount" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                            </StackPanel>
                            <TextBlock Text="{Binding InvestedAmount, StringFormat=\{0:C2\}}" 
                                       FontSize="24" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Your Holdings" FontSize="18" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimary}" Margin="0,0,0,16"/>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding Positions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderLight}" 
                                        BorderThickness="1" 
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="0,0,0,16"
                                        Background="White">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Width="200">
                                            <TextBlock Text="{Binding Symbol}" 
                                                       FontSize="20" FontWeight="Bold"
                                                       Foreground="{StaticResource PrimaryBlue}"/>
                                            <TextBlock Text="{Binding CurrentPrice, StringFormat=\{0:C2\}}" 
                                                       FontSize="16" 
                                                       Foreground="{StaticResource TextPrimary}"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <Grid Grid.Column="1" Margin="40,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Shares" 
                                                           Foreground="{StaticResource TextSecondary}" 
                                                           FontSize="12" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Shares}" 
                                                           FontSize="16" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimary}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Avg. Cost" 
                                                           Foreground="{StaticResource TextSecondary}" 
                                                           FontSize="12" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding AverageCost, StringFormat=\{0:C2\}}" 
                                                           FontSize="16" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimary}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="Total Value" 
                                                           Foreground="{StaticResource TextSecondary}" 
                                                           FontSize="12" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding CurrentValue, StringFormat=\{0:C2\}}" 
                                                           FontSize="16" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimary}"/>
                                            </StackPanel>
                                        </Grid>

                                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                            <StackPanel Margin="0,0,0,12">
                                                <TextBlock Text="{Binding GainLoss, StringFormat=\{0:C2\}}" 
                                                           FontSize="18" FontWeight="Bold"
                                                           Foreground="{Binding GainLoss, Converter={StaticResource ChangeToColorConverter}}"
                                                           HorizontalAlignment="Right"/>
                                                <TextBlock FontSize="14"
                                                           Foreground="{Binding GainLoss, Converter={StaticResource ChangeToColorConverter}}"
                                                           HorizontalAlignment="Right">
                                                    <Run Text="{Binding GainLossPercent, Mode=OneWay, StringFormat={}{0:+0.00%;-0.00%}}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <Button Content="View Stock" 
                                                    Style="{StaticResource ViewButtonStyle}"
                                                    Command="{Binding DataContext.ViewStockCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel Grid.Row="1" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Margin="0,40"
                                Visibility="{Binding Positions.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                        <TextBlock Text="You don't own any stocks yet" 
                                   FontSize="18" 
                                   Foreground="{StaticResource TextSecondary}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="3" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Transaction History" FontSize="18" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimary}" Margin="0,0,0,16"/>

                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Transactions}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              BorderThickness="0"
                              Background="Transparent"
                              RowBackground="White"
                              AlternatingRowBackground="#FAFBFC"
                              MaxHeight="400">

                        <DataGrid.Resources>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="12,12"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            </Style>

                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Padding" Value="12,12"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Width="180">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="DateTime" StringFormat="{}{0:MMM dd, yyyy HH:mm}"/>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Type" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="4" Padding="8,4">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Type}" Value="BUY">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Type}" Value="SELL">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Type}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="12"
                                                       HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Type}" Value="BUY">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Type}" Value="SELL">
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Shares" Binding="{Binding Shares}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Price" Width="120">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="Price" StringFormat="{}{0:C2}"/>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Total" Width="*">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="Total" StringFormat="{}{0:C2}"/>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Margin="0,40"
                                Visibility="{Binding Transactions.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                        <TextBlock Text="No transactions yet" 
                                   FontSize="18" 
                                   Foreground="{StaticResource TextSecondary}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>