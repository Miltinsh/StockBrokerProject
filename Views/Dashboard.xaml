<UserControl x:Class="StockBrokerProject.Views.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:StockBrokerProject"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">
    <UserControl.Resources>
        <local:ChangeToColorConverter x:Key="ChangeToColorConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" 
                   Foreground="{StaticResource TextPrimary}" Margin="0,0,0,24"/>

        <!-- Portfolio Overview Section -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Section Title -->
                <TextBlock Text="Portfolio Overview" FontSize="18" FontWeight="SemiBold" 
                           Foreground="{StaticResource TextPrimary}" Margin="0,0,0,16"/>

                <!-- Stats Grid -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Value -->
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="💵" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Total Value" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TotalValue, StringFormat=\{0:C2\}}" 
                                   FontSize="24" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimary}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="{Binding TotalGainLoss, StringFormat={}{0:+$0.00;-$0.00}}" 
                                       FontSize="14" FontWeight="SemiBold"
                                       Foreground="{Binding TotalGainLoss, Converter={StaticResource ChangeToColorConverter}}"/>
                            <TextBlock Text=" " FontSize="14"/>

                            <TextBlock FontSize="14"
                                       Foreground="{Binding TotalGainLoss, Converter={StaticResource ChangeToColorConverter}}">
                                       <Run Text="{Binding TotalGainLossPercent, Mode=OneWay, StringFormat={}{0:+0.00%;-0.00%}}"/>
                            </TextBlock>
                            <!--
                            <TextBlock FontSize="14"
                                       Foreground="{Binding TotalGainLoss, Converter={StaticResource ChangeToColorConverter}}">
                                <Run Text="{Binding TotalGainLossPercent, StringFormat={}{0:+0.00%;-0.00%}}"/>
                            </TextBlock> -->

                            <TextBlock Text=" Today" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Total Gain/Loss -->
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Total Gain/Loss" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TotalGainLoss, StringFormat=\{0:C2\}}" 
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="{Binding TotalGainLoss, Converter={StaticResource ChangeToColorConverter}}"/>

                        <TextBlock Margin="0,4,0,0" FontSize="14"
                                   Foreground="{Binding TotalGainLoss, Converter={StaticResource ChangeToColorConverter}}">
                                   <Run Text="{Binding TotalGainLossPercent, Mode=OneWay, StringFormat={}{0:+0.00%;-0.00%}}"/>
                        </TextBlock>

                        <!--
                        <TextBlock Margin="0,4,0,0" FontSize="14"
                                   Foreground="{Binding TotalGainLoss, Converter={StaticResource ChangeToColorConverter}}">
                            <Run Text="{Binding TotalGainLossPercent, StringFormat={}{0:+0.00%;-0.00%}}"/>
                        </TextBlock>
                        
                        -->
                    </StackPanel>

                    <!-- Cash Balance -->
                    <StackPanel Grid.Column="2">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="💰" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Cash Balance" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                        </StackPanel>
                        <TextBlock Text="{Binding CashBalance, StringFormat=\{0:C2\}}" 
                                   FontSize="24" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimary}"/>
                    </StackPanel>

                    <!-- Invested Amount -->
                    <StackPanel Grid.Column="3">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="📈" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Invested Amount" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                        </StackPanel>
                        <TextBlock Text="{Binding InvestedAmount, StringFormat=\{0:C2\}}" 
                                   FontSize="24" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimary}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Bottom Section: Top Movers and News Feed -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <!-- Top Movers Section -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Top Movers" FontSize="18" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimary}" Margin="0,0,0,16"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding TopMovers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource BorderLight}" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Symbol -->
                                            <TextBlock Grid.Column="0" Text="{Binding Symbol}" 
                                                       FontWeight="SemiBold" FontSize="14"
                                                       Foreground="{StaticResource TextPrimary}"
                                                       VerticalAlignment="Center"/>

                                            <!-- Company Name -->
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" 
                                                       FontSize="14"
                                                       Foreground="{StaticResource TextPrimary}"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <!-- Price -->
                                            <TextBlock Grid.Column="2" Text="{Binding Price, StringFormat=\{0:C2\}}" 
                                                       FontWeight="SemiBold" FontSize="14"
                                                       Foreground="{StaticResource TextPrimary}"
                                                       VerticalAlignment="Center"/>

                                            <!-- Change -->
                                            <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                                <TextBlock FontSize="14" FontWeight="SemiBold"
                                                           Foreground="{Binding Change, Converter={StaticResource ChangeToColorConverter}}">
                                                    <Run Text="{Binding Change, StringFormat={}{0:+0.00;-0.00}}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Opacity="0.8"
                                                           Foreground="{Binding Change, Converter={StaticResource ChangeToColorConverter}}">
                                                    <Run Text="{Binding ChangePercent, StringFormat={}{0:+0.00%;-0.00%}}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Volume -->
                                            <TextBlock Grid.Column="4" Text="{Binding Volume}" 
                                                       FontSize="13"
                                                       Foreground="{StaticResource TextSecondary}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right">
                                                <TextBlock.ToolTip>
                                                    <ToolTip Content="Volume"/>
                                                </TextBlock.ToolTip>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- News Feed Section -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="News Feed" FontSize="18" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimary}" Margin="0,0,0,16"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding NewsFeeds}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource BorderLight}" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="0,12"
                                            Margin="0,0,0,8">
                                        <StackPanel>
                                            <!-- Header: Author and Time -->
                                            <Grid Margin="0,0,0,8">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="👤" FontSize="14" Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding Author}" 
                                                               FontWeight="SemiBold" FontSize="13"
                                                               Foreground="{StaticResource TextPrimary}"/>
                                                    <TextBlock Text=" • " FontSize="13" 
                                                               Foreground="{StaticResource TextSecondary}" 
                                                               Margin="4,0"/>
                                                    <TextBlock Text="{Binding Ticker}" 
                                                               FontSize="13" FontWeight="SemiBold"
                                                               Foreground="{StaticResource PrimaryBlue}"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding TimeAgo}" 
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextSecondary}"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>

                                            <!-- Content -->
                                            <TextBlock Text="{Binding Content}" 
                                                       FontSize="13" 
                                                       Foreground="{StaticResource TextPrimary}"
                                                       TextWrapping="Wrap"
                                                       LineHeight="18"
                                                       Margin="0,0,0,8"/>

                                            <!-- Reactions -->
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="💬" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding Reactions}" 
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextSecondary}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
