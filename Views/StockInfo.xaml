<UserControl x:Class="StockBrokerProject.Views.StockInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:StockBrokerProject"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">
    <UserControl.Resources>
        <local:ChangeToColorConverter x:Key="ChangeToColorConverter"/>
    </UserControl.Resources>
    <Grid Margin="32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <TextBlock Text="{Binding Name}" FontSize="28" FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="{Binding Symbol}" FontSize="16" 
                           Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                <TextBlock Text="{Binding Price, StringFormat=\{0:C2\}}" 
                           FontSize="32" FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                    <TextBlock Text="{Binding Change, StringFormat={}{0:+0.00;-0.00}}" 
                               FontSize="16" FontWeight="SemiBold" Margin="0,0,8,0"
                               Foreground="{Binding Change, Converter={StaticResource ChangeToColorConverter}}"/>
                    <TextBlock Text="{Binding ChangePercent, StringFormat=({0:+0.00%;-0.00%})}" 
                               FontSize="16"
                               Foreground="{Binding Change, Converter={StaticResource ChangeToColorConverter}}"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="Price Chart" FontSize="18" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimary}"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="1D" Style="{StaticResource NavButtonStyle}" Padding="12,6" Margin="0,0,4,0"/>
                                <Button Content="1W" Style="{StaticResource NavButtonStyle}" Padding="12,6" Margin="0,0,4,0"/>
                                <Button Content="1M" Style="{StaticResource NavButtonStyle}" Padding="12,6" Margin="0,0,4,0" 
                                        Background="#E8F4FF" Foreground="{StaticResource PrimaryBlue}"/>
                                <Button Content="3M" Style="{StaticResource NavButtonStyle}" Padding="12,6" Margin="0,0,4,0"/>
                                <Button Content="1Y" Style="{StaticResource NavButtonStyle}" Padding="12,6" Margin="0,0,4,0"/>
                                <Button Content="ALL" Style="{StaticResource NavButtonStyle}" Padding="12,6"/>
                            </StackPanel>
                        </Grid>
                        
                        <Border Grid.Row="1" Background="#F8F9FA" CornerRadius="8">
                            <TextBlock Text="📈 Live price updates every 5 seconds" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextSecondary}" FontSize="16"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Company Information" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimary}" Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Background="#E8F4FF" CornerRadius="6" Padding="16,8" Margin="0,0,8,0">
                                <TextBlock Text="Overview" Foreground="{StaticResource PrimaryBlue}" FontWeight="SemiBold"/>
                            </Border>
                            <Border Background="Transparent" CornerRadius="6" Padding="16,8" Margin="0,0,8,0">
                                <TextBlock Text="Key Statistics" Foreground="{StaticResource TextSecondary}"/>
                            </Border>
                            <Border Background="Transparent" CornerRadius="6" Padding="16,8">
                                <TextBlock Text="About" Foreground="{StaticResource TextSecondary}"/>
                            </Border>
                        </StackPanel>
                        
                        <TextBlock Text="Description" FontSize="15" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding Details}" TextWrapping="Wrap" 
                                   Foreground="{StaticResource TextSecondary}" FontSize="14" 
                                   LineHeight="22" Margin="0,0,0,20"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel>
                                <TextBlock Text="Sector" Foreground="{StaticResource TextSecondary}" FontSize="13" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding Sector}" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimary}" FontSize="14"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Industry" Foreground="{StaticResource TextSecondary}" FontSize="13" Margin="0,0,0,4"/>
                                <TextBlock Text="Consumer Electronics" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimary}" FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Laba -->
            <StackPanel Grid.Column="2">
                
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimary}" Margin="0,0,0,16">
                            <Run Text="Trade "/>
                            <Run Text="{Binding Symbol}" Foreground="{StaticResource PrimaryBlue}"/>
                        </TextBlock>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <RadioButton Content="Buy" IsChecked="{Binding IsBuyMode}" 
                                         GroupName="TradeType"
                                         Command="{Binding SetBuyModeCommand}"
                                         Foreground="{StaticResource PositiveGreen}" 
                                         FontWeight="Bold" FontSize="14"
                                         Margin="0,0,20,0"/>

                            <RadioButton Content="Sell" IsChecked="{Binding IsSellMode, Mode=OneWay}" 
                                         GroupName="TradeType"
                                         Command="{Binding SetSellModeCommand}"
                                         Foreground="{StaticResource NegativeRed}" 
                                         FontWeight="Bold" FontSize="14"/>      
                            <!--
                            <RadioButton Content="Sell" IsChecked="{Binding IsSellMode}" 
                                         GroupName="TradeType"
                                         Command="{Binding SetSellModeCommand}"
                                         Foreground="{StaticResource NegativeRed}" 
                                         FontWeight="Bold" FontSize="14"/>
                            -->
                        </StackPanel>
                        
                        <TextBlock Text="Order Type" Foreground="{StaticResource TextSecondary}" 
                                   FontSize="13" Margin="0,0,0,6"/>
                        <ComboBox Margin="0,0,0,16" Padding="12,10" FontSize="14">
                            <ComboBoxItem IsSelected="True">Market Order</ComboBoxItem>
                            <ComboBoxItem>Limit Order</ComboBoxItem>
                            <ComboBoxItem>Stop Order</ComboBoxItem>
                        </ComboBox>
                        
                        <TextBlock Text="Shares" Foreground="{StaticResource TextSecondary}" 
                                   FontSize="13" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding SharesToTrade, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="12,10" FontSize="14" Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Price per Share" Foreground="{StaticResource TextSecondary}" 
                                   FontSize="13" Margin="0,0,0,6"/>
                        <TextBlock Text="{Binding Price, StringFormat=\{0:C2\}}" 
                                   FontSize="14" FontWeight="SemiBold" Margin="0,0,0,16"
                                   Foreground="{StaticResource TextPrimary}"/>
                        
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="Total" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                            <TextBlock Text="{Binding TotalCost, StringFormat=\{0:C2\}}" 
                                       HorizontalAlignment="Right" 
                                       FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                        </Grid>
                        
                        <Button Content="{Binding TradeButtonText}" 
                                Style="{StaticResource ActionButtonStyle}" 
                                Command="{Binding ExecuteTradeCommand}"
                                HorizontalAlignment="Stretch" Padding="0,14"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Your Position" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimary}" Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="Shares Owned" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                            <TextBlock HorizontalAlignment="Right" FontWeight="SemiBold">
                                <Run Text="{Binding SharesOwned, Mode=OneWay}"/>
                                <Run Text=" " Foreground="{StaticResource TextSecondary}"/>
                                <Run Text="{Binding Symbol}" Foreground="{StaticResource TextSecondary}"/>
                            </TextBlock>
                        </Grid>
                        
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="Average Price" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                            <TextBlock Text="{Binding AveragePrice, StringFormat=\{0:C2\}}" 
                                       HorizontalAlignment="Right" FontWeight="SemiBold"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="Total Value" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                            <TextBlock Text="{Binding PositionValue, StringFormat=\{0:C2\}}" 
                                       HorizontalAlignment="Right" FontWeight="SemiBold"/>
                        </Grid>
                        
                        <Separator Margin="0,8" Background="{StaticResource BorderLight}"/>
                        
                        <Grid>
                            <TextBlock Text="Profit/Loss" FontSize="13" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding PositionGainLoss, StringFormat=\{0:C2\}}" 
                                           Foreground="{Binding PositionGainLoss, Converter={StaticResource ChangeToColorConverter}}"
                                           FontWeight="Bold" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock FontSize="13"
                                           Foreground="{Binding PositionGainLoss, Converter={StaticResource ChangeToColorConverter}}">
                                           <Run Text="{Binding PositionGainLossPercent, Mode=OneWay, StringFormat={}{0:+0.00%;-0.00%}}"/>      
                                </TextBlock>


                                <!--
                                <TextBlock FontSize="13"
                                           Foreground="{Binding PositionGainLoss, Converter={StaticResource ChangeToColorConverter}}">
                                    <Run Text="{Binding PositionGainLossPercent, StringFormat={}{0:+0.00%;-0.00%}}"/>
                                </TextBlock>
                                
                                -->
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
