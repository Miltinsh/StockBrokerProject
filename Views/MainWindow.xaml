<Window x:Class="StockBrokerProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:StockBrokerProject"
        Title="StockBroker" Height="700" Width="1200"
        Background="{StaticResource BackgroundGray}">
    <DockPanel>

        <Border DockPanel.Dock="Top" Background="White" Padding="24,16"
                BorderBrush="{StaticResource BorderLight}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="StockBroker" FontSize="18" FontWeight="SemiBold" 
                               Foreground="{StaticResource PrimaryBlue}" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                    <Button Content="Dashboard" 
                            Command="{Binding ShowDashboardCommand}"
                            Margin="0,0,8,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDashboardActive}" Value="True">
                                        <Setter Property="Background" Value="#E8F4FF"/>
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Portfolio" 
                            Command="{Binding ShowPortfolioCommand}"
                            Margin="0,0,8,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPortfolioActive}" Value="True">
                                        <Setter Property="Background" Value="#E8F4FF"/>
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Markets" 
                            Command="{Binding ShowOverviewCommand}"
                            Margin="0,0,8,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMarketsActive}" Value="True">
                                        <Setter Property="Background" Value="#E8F4FF"/>
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Settings" 
                            Command="{Binding ShowSettingsCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSettingsActive}" Value="True">
                                        <Setter Property="Background" Value="#E8F4FF"/>
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <ContentControl Content="{Binding CurrentViewModel}" Margin="0"/>
    </DockPanel>
</Window>