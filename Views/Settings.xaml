<UserControl x:Class="StockBrokerProject.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">

    <Grid Margin="32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings" FontSize="28" FontWeight="Bold" 
                   Foreground="{StaticResource TextPrimary}" Margin="0,0,0,24"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="Full Backup" FontSize="18" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimary}"/>

                            </StackPanel>
                        </StackPanel>

                        <Separator Margin="0,16" Background="{StaticResource BorderLight}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" 
                                    Command="{Binding ExportAllCommand}"
                                    Style="{StaticResource ActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Padding="0,16">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="Full Export" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2" 
                                    Command="{Binding ImportAllCommand}"
                                    HorizontalAlignment="Stretch"
                                    Padding="0,16">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ViewButtonStyle}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F4FF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="Full Import" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="Data File Export" FontSize="18" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                        </StackPanel>

                        <Separator Margin="0,16" Background="{StaticResource BorderLight}"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Portfolio Data" FontWeight="SemiBold" FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="Export" 
                                        Command="{Binding ExportPortfolioCommand}"
                                        Style="{StaticResource ViewButtonStyle}"
                                        Margin="0,0,8,0"/>
                                <Button Content="Import" 
                                        Command="{Binding ImportPortfolioCommand}"
                                        Style="{StaticResource ViewButtonStyle}"/>
                            </StackPanel>
                        </Grid>

                        <Separator Margin="0,0,0,20" Background="{StaticResource BorderLight}"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Stock Prices" FontWeight="SemiBold" FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="Export" 
                                        Command="{Binding ExportPricesCommand}"
                                        Style="{StaticResource ViewButtonStyle}"
                                        Margin="0,0,8,0"/>
                                <Button Content="Import" 
                                        Command="{Binding ImportPricesCommand}"
                                        Style="{StaticResource ViewButtonStyle}"/>
                            </StackPanel>
                        </Grid>

                        <Separator Margin="0,0,0,20" Background="{StaticResource BorderLight}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Transaction History" FontWeight="SemiBold" FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="Export" 
                                        Command="{Binding ExportTransactionsCommand}"
                                        Style="{StaticResource ViewButtonStyle}"
                                        Margin="0,0,8,0"/>
                                <Button Content="Import" 
                                        Command="{Binding ImportTransactionsCommand}"
                                        Style="{StaticResource ViewButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>