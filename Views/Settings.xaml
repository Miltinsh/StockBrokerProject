<UserControl x:Class="StockBrokerProject.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">

    <Grid Margin="32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Settings &amp; Data Management" FontSize="28" FontWeight="Bold" 
                   Foreground="{StaticResource TextPrimary}" Margin="0,0,0,24"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Export/Import All -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="📦" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="Complete Backup" FontSize="18" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Export or import all your data in one file" 
                                           FontSize="13" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <Separator Margin="0,16" Background="{StaticResource BorderLight}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" 
                                    Command="{Binding ExportAllCommand}"
                                    Style="{StaticResource ActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Padding="0,16">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="📤" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="Export Complete Backup" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2" 
                                    Command="{Binding ImportAllCommand}"
                                    HorizontalAlignment="Stretch"
                                    Padding="0,16">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ViewButtonStyle}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F4FF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="📥" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="Import Complete Backup" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!--<Border Background="#FFF9E6" CornerRadius="8" Padding="16" Margin="0,16,0,0"
                                BorderBrush="#FFE0B2" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="💡" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="Recommended Method" FontWeight="SemiBold" 
                                               Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>
                                <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}" FontSize="13">
                                    Complete backup creates a ZIP file containing your portfolio, stock prices, and transaction history. 
                                    This is the easiest way to backup and restore all your data at once.
                                </TextBlock>
                            </StackPanel>
                        </Border>-->
                    </StackPanel>
                </Border>

                <!-- Individual Export/Import -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="📋" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="Individual Data Files" FontSize="18" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Export or import specific data files separately" 
                                           FontSize="13" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <Separator Margin="0,16" Background="{StaticResource BorderLight}"/>

                        <!-- Portfolio -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Portfolio Data" FontWeight="SemiBold" FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Positions &amp; cash balance" FontSize="12"
                                           Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="📤 Export" 
                                        Command="{Binding ExportPortfolioCommand}"
                                        Style="{StaticResource ViewButtonStyle}"
                                        Margin="0,0,8,0"/>
                                <Button Content="📥 Import" 
                                        Command="{Binding ImportPortfolioCommand}"
                                        Style="{StaticResource ViewButtonStyle}"/>
                            </StackPanel>
                        </Grid>

                        <Separator Margin="0,0,0,20" Background="{StaticResource BorderLight}"/>

                        <!-- Stock Prices -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Stock Prices" FontWeight="SemiBold" FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Current market prices" FontSize="12"
                                           Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="📤 Export" 
                                        Command="{Binding ExportPricesCommand}"
                                        Style="{StaticResource ViewButtonStyle}"
                                        Margin="0,0,8,0"/>
                                <Button Content="📥 Import" 
                                        Command="{Binding ImportPricesCommand}"
                                        Style="{StaticResource ViewButtonStyle}"/>
                            </StackPanel>
                        </Grid>

                        <Separator Margin="0,0,0,20" Background="{StaticResource BorderLight}"/>

                        <!-- Transactions -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Transaction History" FontWeight="SemiBold" FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Buy/sell trade records" FontSize="12"
                                           Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="📤 Export" 
                                        Command="{Binding ExportTransactionsCommand}"
                                        Style="{StaticResource ViewButtonStyle}"
                                        Margin="0,0,8,0"/>
                                <Button Content="📥 Import" 
                                        Command="{Binding ImportTransactionsCommand}"
                                        Style="{StaticResource ViewButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>